extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  div(class='splash-main')
    div(class='splash-left')
      h1(id='splash-text-big') Eerium is a place to write, read, and connect
      h3(id='splash-text-main') It's easy and free to post your thinking on any topic and connect with millions of readers.
      h3(id='splash-start-writing-button') Start Writing

  div(class='site-body')
    div(class='scrolling-feed')

      div(class='feed-stories')
        each story in stories
          div(class='feed-story')
            p(class='story-title')= story.title
            p(class='story-author')= story.User.username
            p(class='story-metadata')= story.createdAt
            p(class='story-snippet')= story.content


      if locals.authenticated
      else
        div(class='sidebar')
          p(id='discover-header') DISCOVER MORE OF WHAT MATTERS TO YOU
          div(class='discover-tabs')
            ul(class='discover-row')
              li
                a(href='') Category 1
              li
                a(href='') Category 2
              li
                a(href='') Category 3
            ul(class='discover-row')
              li
                a(href='') Category 4
              li
                a(href='') Category 5
              li
                a(href='') Category 6
            ul(class='discover-row')
              li
                a(href='') Category 7
              li
                a(href='') Category 8
              li
                a(href='') Category 9
