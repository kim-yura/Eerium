extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action=`/stories/${story.id}/edit` method='post')
    input(type="hidden", name="_csrf", value=csrfToken)
    input(type="text", name="title", value= story.title required = true)
    textarea(name="content", cols="30", rows="10")= story.content
    button(type='submit' class='') Update Story
    a(href='/' class='') Cancel

