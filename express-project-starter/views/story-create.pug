extends layout.pug

include utils.pug

block content
  //- +validationErrorSummary(errors)
  form(action="/stories/create", method="post")

    input(type="hidden", name="_csrf", value=csrfToken)
      //- STORY TITLE
    input(type="text", placeholder="Title", name="title", required = true)
      //- STORY CONTENT
    textarea(name="content", placeholder="Tell your story...", required = true, cols="30", rows="10")
      //- PUBLISH BUTTON
    button(type="submit") Publish
