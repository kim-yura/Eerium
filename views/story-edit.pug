extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  link(rel="stylesheet" href="/stylesheets/stories.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action=`/stories/${story.id}/edit` method='post' class="post-story")
    input(type="hidden", name="_csrf", value=csrfToken)
    input(type="text", name="title", value= story.title required = true id="story-title")
    textarea(name="content", cols="30", rows="10" id="story-content")= story.content
    button(type='submit' class='' id="submit-story") Update Story
    a(href='/' class='' id="submit-story") Cancel

    //-modified reason: if use utils.pug, textType= text, later we can work
    //-to dry story-creae.pug and story-edit if needed.
